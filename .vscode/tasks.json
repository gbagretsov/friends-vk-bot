{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Watch dev",
            "type": "shell",
            "command": "npm run watch dev",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": []
        },
        {
            "label": "Lint",
            "type": "shell",
            "command": "eslint app/**/*.js front/**/*.js* index.js",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": ["$eslint-stylish"]
        }
    ]
}