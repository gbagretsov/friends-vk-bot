{
  "compilerOptions": {
    "target": "ES2021",
    "module": "CommonJS",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "../compiled/app",
    "sourceMap": true,
    "incremental": true,
    "allowJs": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.js"
  ]
}
